{
  "bindings": [
    {
      "type": "httpTrigger",
      "name": "req",
      "direction": "in",
      "methods": [
        "get",
        "post"
      ],
      "route": "{surName}/{lastName}/{vehicleCode}/{vehicleDescription}/{km}/{transactionID}"
    },
    {
      "name": "res",
      "type": "http",
      "direction": "out"
    },
    {
      "name": "workersIN",
      "type": "cosmosDB",
      "databaseName": "workers",
      "collectionName": "workers",
      "sqlQuery": "SELECT * FROM c where lower(CONCAT(c.surName, c.lastName, c.vehicleCode)) = lower(concat({surName}, {lastName}, {vehicleCode}))",
      "connectionStringSetting": "connectionStringSetting",
      "direction": "in"
    },
    {
      "name": "workersOUT",
      "type": "cosmosDB",
      "databaseName": "workers",
      "collectionName": "workers",
      "createIfNotExists": true,
      "connectionStringSetting": "connectionStringSetting",
      "direction": "out"
    }
  ]
}